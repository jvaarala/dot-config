#!/bin/bash

install_repositories() {
  echo -e "\nğŸ“‚ Cloning repositories..."
  for repo in "${REPOS[@]}"; do
    IFS=":" read -r protocol url path branch <<<"$repo"

    if [ -z "$branch" ]; then
      branch_flag=""
    else
      branch_flag="-b $branch"
    fi

    if [ ! -d "$path" ]; then
      git clone --quiet $branch_flag "$protocol:$url" "$path"
      echo "  âœ… Cloned $protocol:$url to $path ${branch_flag:+(branch: $branch)}"
    else
      echo "  ğŸ”„ Repo already exists at $path, skipping..."
    fi
  done
}

install_brew_package() {
  echo -e "\nğŸ» Installing brew packages..."
  for tap_package in "${BREW[@]}"; do
    IFS=":" read -r tap package <<<"$tap_package"
    # Check if the tap is already added
    if ! brew tap | grep -q "$tap"; then
      echo "  ğŸ”§ Tapping into $tap..."
      brew tap "$tap"
    fi
    # Check if the package is installed
    if ! brew list "$package" &>/dev/null; then
      echo "  ğŸ”§ Installing $package..."
      brew install "$package"
    else
      echo "  âœ… $package is already installed."
    fi
  done
}

install_symlinks() {
  echo -e "\nğŸ”— Creating symbolic links..."
  for file_target in "${FILES_TARGETS[@]}"; do
    IFS=":" read -r file target <<<"$file_target"
    source_file="$PWD/$file"

    if [ ! -e "$source_file" ]; then
      echo "  âŒ Source file $source_file does not exist. Please ensure the file is in the current directory."
    else
      ln -sfn "$source_file" "$target"
      echo "  âœ… Linked $file to $target"
    fi
  done
}

install() {
  install_repositories
  install_brew_package
  install_symlinks

  echo -e "\nğŸ‰ Installing done!"
}

uninstall_repositories() {
  echo -e "\nğŸ“‚ Removing repositories..."
  for repo in "${REPOS[@]}"; do
    IFS=":" read -r protocol url path branch <<<"$repo"

    if [ -d "$path" ]; then
      rm -rf "$path"
      echo "  âœ… Removed repository at $path"
    else
      echo "  âŒ No repository found at $path, skipping..."
    fi
  done
}

uninstall_brew_package() {
  echo -e "\nğŸ» Uninstalling brew packages..."
  for tap_package in "${BREW[@]}"; do
    IFS=":" read -r tap package <<<"$tap_package"

    if brew list "$package" &>/dev/null; then
      echo "  ğŸ”§ Uninstalling $package..."
      brew uninstall "$package"
    else
      echo "  âŒ $package already uninstalled."
    fi

    if ! brew list | grep -q "$tap"; then
      echo "  ğŸ”§ Untapping $tap..."
      brew untap "$tap"
    else
      echo "  â“ $tap is still in use by other packages."
    fi
  done
}

uninstall_symlinks() {
  echo -e "\nğŸ›‘ Removing symbolic links..."

  for file_target in "${FILES_TARGETS[@]}"; do
    IFS=":" read -r file target <<<"$file_target"

    if [ -L "$target" ]; then
      rm -f "$target"
      echo "  âœ… Removed symlink for $file"
    else
      echo "  âŒ No symlink found for $file, skipping..."
    fi
  done
}

uninstall() {
  uninstall_repositories
  uninstall_brew_package
  uninstall_symlinks

  echo -e "\nğŸ‰ Uninstalling done!"
}

# "protocol:url:path:branch"
REPOS=(
  "https://github.com/tmux-plugins/tpm.git:$HOME/.tmux/plugins/tpm"
  "https://github.com/catppuccin/tmux.git:$HOME/.config/tmux/plugins/catppuccin/tmux:v2.1.2"
)

# "tap:package"
BREW=(
  "arl/arl:gitmux"
)

# "file:target"
FILES_TARGETS=(
  ".tmux.conf:$HOME/.tmux.conf"
  ".zshrc:$HOME/.zshrc"
)

# Check for valid argument
if [ $# -ne 1 ]; then
  echo "Usage: $0 {install|uninstall}"
  exit 1
fi

if [ "$1" == "install" ]; then
  install
elif [ "$1" == "uninstall" ]; then
  uninstall
else
  echo "Invalid argument. Usage: $0 {install|uninstall}"
  exit 1
fi
