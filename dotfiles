#!/bin/bash

install() {
  echo -e "\nðŸ”— Creating symbolic links..."
  for file_target in "${FILES_TARGETS[@]}"; do
    IFS=":" read -r file target <<< "$file_target"
    source_file="$PWD/$file"

    if [ ! -e "$source_file" ]; then
      echo "  âŒ Source file $source_file does not exist. Please ensure the file is in the current directory."
    else
      ln -sfn "$source_file" "$target"
      echo "  âœ… Linked $file to $target"
    fi
  done

  echo -e "\nðŸ“‚ Cloning repositories..."
  for repo in "${REPOS[@]}"; do
    IFS=":" read -r protocol url path branch <<< "$repo"

    if [ -z "$branch" ]; then
      branch_flag=""
    else
      branch_flag="-b $branch"
    fi

    if [ ! -d "$path" ]; then
      git clone --quiet $branch_flag "$protocol:$url" "$path"
      echo "  âœ… Cloned $protocol:$url to $path ${branch_flag:+(branch: $branch)}"
    else
      echo "  ðŸ”„ Repo already exists at $path, skipping..."
    fi
  done

  echo -e "\nðŸŽ‰ Dotfiles and repositories setup complete!\n"
}

uninstall() {
  echo -e "\nðŸ›‘ Removing symbolic links..."

  for file_target in "${FILES_TARGETS[@]}"; do
    IFS=":" read -r file target <<< "$file_target"

    if [ -L "$target" ]; then
      rm -f "$target"
      echo "  âœ… Removed symlink for $file"
    else
      echo "  âŒ No symlink found for $file, skipping..."
    fi
  done

  echo -e "\nðŸ“‚ Removing repositories..."
  for repo in "${REPOS[@]}"; do
    IFS=":" read -r protocol url path branch <<< "$repo"

    if [ -d "$path" ]; then
      rm -rf "$path"
      echo "  âœ… Removed repository at $path"
    else
      echo "  âŒ No repository found at $path, skipping..."
    fi
  done

  echo -e "\nðŸŽ‰ Dotfiles and repositories uninstalled!"
}

# "protocol:url:path:branch"
REPOS=(
  "https://github.com/tmux-plugins/tpm.git:$HOME/.tmux/plugins/tpm"
  "https://github.com/catppuccin/tmux.git:$HOME/.config/tmux/plugins/catppuccin/tmux:v2.1.2"
)

# "file:target"
FILES_TARGETS=(
  ".tmux.conf:$HOME/.tmux.conf"
  ".zshrc:$HOME/.zshrc"
)

# Check for valid argument
if [ $# -ne 1 ]; then
  echo "Usage: $0 {install|uninstall}"
  exit 1
fi

if [ "$1" == "install" ]; then
  install
elif [ "$1" == "uninstall" ]; then
  uninstall
else
  echo "Invalid argument. Usage: $0 {install|uninstall}"
  exit 1
fi
