install_brew_package() {
  local package=$1
  local tap=$2

  if [ -z "$tap" ]; then
    echo "  â„¹ï¸  no tap found for $package"
  else
    if ! brew tap | grep -q "$tap"; then
      echo "  ğŸ”§ tapping into $tap..."
      brew tap -q "$tap" >/dev/null
    fi
  fi

  if ! brew list "$package" &>/dev/null; then
    echo "  ğŸ”§ installing $package..."
    brew install -q "$package" >/dev/null
  else
    echo "  âœ… $package is already installed."
  fi
}

uninstall_brew_package() {
  local package=$1
  local tap=$2

  if brew list "$package" &>/dev/null; then
    echo "  ğŸ”§ uninstalling $package..."
    brew uninstall -q "$package" >/dev/null
  else
    echo "  â„¹ï¸  $package already uninstalled."
  fi

  if [ -z "$tap" ]; then
    echo "  â„¹ï¸  no tap found for $package"
  else
    if ! brew list | grep -q "$tap"; then
      echo "  ğŸ”§ untapping $tap..."
      brew untap -q "$tap" >/dev/null
    else
      echo "  â“ $tap is still in use by other packages."
    fi
  fi
}

function install_brew_packages() {
  IFS=';' read -r -a BREW <<< "$1"
  echo ""
  echo "ğŸ» installing brew packages..."
  for tap_package in "${BREW[@]}"; do
    IFS="|" read -r package tap <<<"$tap_package"
    install_brew_package "$package" "$tap"
  done
}

function uninstall_brew_packages() {
  IFS=';' read -r -a BREW <<< "$1"
  echo ""
  echo "ğŸ» uninstalling brew packages..."
  for tap_package in "${BREW[@]}"; do
    IFS="|" read -r package tap <<<"$tap_package"
    uninstall_brew_package "$package" "$tap"
  done
}