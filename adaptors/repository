install_repository() {
  local source=$1
  local path=$2

  if [ ! -d "$path" ]; then
    git clone -q $source "$path"
    echo "  ‚úÖ cloned $source to $path "
  else
    echo "  üîÑ repo already exists at $path, skipping..."
  fi
}

uninstall_repository() {
  local source=$1
  local path=$2

  if [ -d "$path" ]; then
    rm -rf "$path"
    echo "  ‚úÖ removed repository at $path"
  else
    echo "  ‚ÑπÔ∏è  no repository found at $path, skipping..."
  fi
}
